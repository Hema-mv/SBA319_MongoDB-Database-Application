<!DOCTYPE html>
<html>
  <head>
    <title>Users</title>
    <link rel="stylesheet" type="text/css" href="/styles.css" />
  </head>
  <body>
  
    <nav class="navbar">
      <ul>
        <li><a href="/users">Users</a></li>
        <li><a href="/jobs">Jobs</a></li>
        <li><a href="/applications">Applications</a></li>
      </ul>
    </nav>

    <h1>User List</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index) => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td class="actions">
            <form
              method="post"
              action="/users/<%= user._id %>?_method=DELETE"
              style="display: inline"
            >
              <!-- <a href="/users/update/<%= index %>" class="update-button"
                >Update</a
              > -->
              <a href="/users/update/<%= user._id %>" class="update-button">Update</a>
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <h2>Add New User</h2>
    <form method="post" action="/users">
      <label for="name">Name:</label>
      <input
        type="text"
        width="30px"
        id="name"
        name="name"
        maxlength="50"
        size="30"
        required
      /><br />
      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        maxlength="50"
        size="30"
        required
      /><br />
      <button type="submit">Add User</button>
    </form>
  </body>
</html>
